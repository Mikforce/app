<!DOCTYPE html>
<html>
  <head>
    <title>Mrt</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <ul class='navbar navbar-expand-lg bg-light'>
      <div class="container-fluid">
      <% if user_signed_in? %>
        <li class="navbar-nav">
          <%= link_to 'Выход', logout_path, method: :delete, class: 'nav-link' %>
        </li>
          <% else %>
          <li class="navbar-nav">
            <%= link_to 'Вход', new_user_session_path, class: 'nav-link' %>
          </li>
          <li class="navbar-nav">
            <%= link_to 'Регистрация', new_user_registration_path, class: 'nav-link' %>
          </li>
      <% end %>
    </ul>

      </div>
    <div class="wrapper">
    <%= yield %>

    </div>
  </body>
</html>
